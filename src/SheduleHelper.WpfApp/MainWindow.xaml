<Window x:Class="SheduleHelper.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:SheduleHelper.WpfApp"
        mc:Ignorable="d" MinWidth="600" MinHeight="320"
        WindowStyle="None" ResizeMode="CanResize"
        Background="{DynamicResource LayerBackgroundFloatingBrush}"
        
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <!-- Base button style -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Foreground" Value="{DynamicResource DefaultControlForegroundDefaultBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{DynamicResource DefaultControlBackgroundHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{DynamicResource DefaultControlBackgroundPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close button special case -->
        <Style x:Key="WindowCloseButtonStyle" BasedOn="{StaticResource WindowButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#E81123"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#C50F1F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="32"
            CornerRadius="6"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- custom titlebar -->
        <Border Height="32" Background="Transparent" x:Name="TitleBar"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <DockPanel VerticalAlignment="Center" LastChildFill="True">
                <TextBlock Text="MyApp" VerticalAlignment="Center" Margin="12,0" 
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           WindowChrome.IsHitTestVisibleInChrome="True"/>
                <StackPanel x:Name="ButtonsPanel" Orientation="Horizontal" 
                            VerticalAlignment="Center" HorizontalAlignment="Right" Background="Transparent"
                            WindowChrome.IsHitTestVisibleInChrome="True">

                    <!-- Minimize -->
                    <Button Style="{StaticResource WindowButtonStyle}" Click="Minimize_Click">
                        <TextBlock Text="&#xE921;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>

                    <!-- Maximize / Restore -->
                    <Button Style="{StaticResource WindowButtonStyle}" Click="MaximizeRestore_Click">
                        <TextBlock Text="&#xE922;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>

                    <!-- Close -->
                    <Button Style="{StaticResource WindowCloseButtonStyle}" Click="Close_Click">
                        <TextBlock Text="&#xE8BB;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- rest of UI -->
        <Grid Grid.Row="1">
            <!-- Main Content Area -->
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock Text="Slider Samples" FontSize="20" FontWeight="SemiBold"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,0,0,20"/>

                <!-- Basic Horizontal Slider -->
                <TextBlock Text="Basic Horizontal Slider:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,0,0,8"/>
                <Slider x:Name="BasicSlider"
                        Minimum="0" Maximum="100" Value="50"
                        Width="300"
                        Margin="0,4,0,0"/>
                <TextBlock x:Name="BasicSliderValue"
                           Text="{Binding ElementName=BasicSlider, Path=Value, StringFormat='Value: {0:F0}'}"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>

                <!-- Volume Control Example -->
                <TextBlock Text="🔊 Volume Control:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <Grid Width="300" Margin="0,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="🔇" Grid.Column="0"
                               Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Slider x:Name="VolumeSlider" Grid.Column="1"
                            Minimum="0" Maximum="100" Value="75"/>
                    <TextBlock Text="🔊" Grid.Column="2"
                               Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                </Grid>

                <!-- Range Sliders -->
                <TextBlock Text="Brightness &amp; Contrast:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <Grid Width="300" Margin="0,4,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Brightness:" Grid.Row="0" Grid.Column="0"
                               Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                               VerticalAlignment="Center"/>
                    <Slider Grid.Row="0" Grid.Column="1"
                            Minimum="0" Maximum="100" Value="60"
                            Margin="8,0,0,0"/>

                    <TextBlock Text="Contrast:" Grid.Row="1" Grid.Column="0"
                               Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                               VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <Slider Grid.Row="1" Grid.Column="1"
                            Minimum="0" Maximum="100" Value="50"
                            Margin="8,8,0,0"/>
                </Grid>

                <!-- Vertical Sliders -->
                <TextBlock Text="Vertical Sliders (Equalizer):" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                    <StackPanel Margin="0,0,16,0">
                        <TextBlock Text="Bass"
                                   Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                   HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <Slider Orientation="Vertical" Height="120" Value="40"
                                Minimum="0" Maximum="100"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,16,0">
                        <TextBlock Text="Mid"
                                   Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                   HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <Slider Orientation="Vertical" Height="120" Value="50"
                                Minimum="0" Maximum="100"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Treble"
                                   Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                   HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <Slider Orientation="Vertical" Height="120" Value="60"
                                Minimum="0" Maximum="100"/>
                    </StackPanel>
                </StackPanel>

                <!-- Disabled State -->
                <TextBlock Text="Disabled State:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <Slider Width="300" Minimum="0" Maximum="100" Value="30"
                        IsEnabled="False" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Theme Switch Button in Bottom-Right Corner -->
            <Button x:Name="SwitchThemeButton"
                    Content="Switch Theme"
                    Click="SwitchThemeButton_Click"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="16"/>
        </Grid>
    </Grid>
</Window>
